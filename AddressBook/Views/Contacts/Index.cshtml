@using AddressBook.Data.Entities
<h1>All Contacts</h1>
<table border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>

        </tr>
    </thead>
    <tbody>

        @foreach (Contact item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><a href="/Contacts/Single/@item.Id">@item.FullName</a></td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td><a href="/Contacts/Edit/@item.Id">Edit</a></td>
                <td><a href="/Contacts/Remove/@item.Id">Remove</a></td>
            </tr>
        }

    </tbody>

    
</table>
<a href="/Contacts/Add">Add Contact</a>