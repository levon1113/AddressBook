@using AddressBook.Data.Entities
<h1>All Contacts</h1>
<style>
    /*.inbody {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 20px;
    }*/

    table {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        width: 100%;
        border-collapse: collapse;
    }

    table a{
            color: #4CAF50;
        font-weight:bold;
        text-decoration:none;

    }

    table a:hover{

    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;

    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
    .add{
        color:#4CAF50;
        border: 2px solid #4CAF50;
        margin-top:20px;
        padding:20px 0;
        text-align:center;
        width:135px;
        display:block;
        text-decoration: none;
        font-weight:bold;
    }

    .add:hover{
        color:white;
        border-color: white;
            background-color: #4CAF50;
            transition:all .2s;
    }
    
</style>


<div class="inbody">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Contact item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><a href="/Contacts/Single/@item.Id">@item.FullName</a></td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td><a href="/Contacts/Edit/@item.Id">Edit</a></td>
                <td><a href="/Contacts/Remove/@item.Id">Remove</a></td>
            </tr>
        }

        </tbody>
    </table>
    <a class="add"  href="/Contacts/Add">Add Contact</a>

</div>